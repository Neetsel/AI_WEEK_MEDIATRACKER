<div class="container">
  <h1>Movie List</h1>

  <ul>
    <% @movies.each do |movie| %>
      <li id="<%= dom_id(movie) %>">
        <%= link_to movie.title, movie_path(movie)  %></li>
    <% end %>
  </ul>

  <h2>Ajouter un film depuis OMDb</h2>

  <%= form_with url: search_from_omdb_movies_path, method: :get, data: { turbo_frame: "omdb_results" } do %>
  <%= label_tag :title, "Movie title" %>
  <%= text_field_tag :title %>
  <%= submit_tag "Search" %>
  <% end %>

  <turbo-frame id="omdb_results">
    <%# Display de la liste de films de l'API %>
  </turbo-frame>


</div>
