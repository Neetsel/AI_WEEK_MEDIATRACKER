<div class="container">
  <h1>Your Watchlist</h1>
  <div class="row">
    <% @planned_movies.each do |planned_movie| %>
      <div class="col-3 mb-3">
        <%= render "shared/cards/movie", movie: planned_movie.movie %>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to movies", movies_path, class: "btn btn-primary" %>
</div>
