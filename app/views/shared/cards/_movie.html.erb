<div class="col-md-3 mb-4">
  <div class="card h-100 shadow-sm">
    <%= link_to movie_path(movie) do %>
      <%= image_tag movie.poster, alt: movie.title, class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <%= link_to movie_path(movie) do %>
        <h5 class="card-title"><%= movie.title %></h5>
        <p class="card-text text-muted"><%= movie.year %></p>
      <% end %>
      <div class="d-flex">
        <div id="like_button" class="mx-2">
          <%= render "shared/buttons/like_button", movie: movie %>
        </div>

        <div id="seen_button" class="mx-2">
          <%= render "shared/buttons/seen_button", movie: movie %>
        </div>

        <div id="planned_button" class="mx-2">
          <%= render "shared/buttons/planned_button", movie: movie %>
        </div>
        <div id="chat_button" class="mx-2">
          <%= render "shared/buttons/chat_button", movie: movie %>
        </div>
      </div>
    </div>
  </div>
</div>
