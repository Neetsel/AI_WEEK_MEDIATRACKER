<% if SeenMovie.find_by(movie_id: movie.id, user_id: current_user.id).nil? %>
  <%= link_to movie_seen_movies_path(movie), data: { turbo_method:"POST" } do %>
    <i class="fa-regular fa-eye"></i>
  <% end %>
<% else %>
  <%= link_to seen_movie_path(SeenMovie.find_by(movie_id: movie.id, user_id: current_user.id)), data: { turbo_method: "DELETE" } do %>
    <i class="fa-solid fa-eye"></i>
  <% end %>
<% end %>
