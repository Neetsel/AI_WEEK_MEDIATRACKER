<% if PlannedMovie.find_by(movie_id: movie.id, user_id: current_user.id).nil? %>
  <%= link_to movie_planned_movies_path(movie), data: { turbo_method:"POST" } do %>
    <i class="fa-regular fa-calendar"></i>
  <% end %>
<% else %>
  <%= link_to planned_movie_path(PlannedMovie.find_by(movie_id: movie.id, user_id: current_user.id)), data: { turbo_method: "DELETE" } do %>
    <i class="fa-solid fa-calendar"></i>
  <% end %>
<% end %>
