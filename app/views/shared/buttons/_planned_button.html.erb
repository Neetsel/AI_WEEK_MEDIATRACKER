<% if PlannedMovie.find_by(movie_id: movie.id, user_id: current_user.id).nil? %>
  <%= link_to "Add to your watchlist", movie_planned_movies_path(movie), data: { turbo_method:"POST" }, class: "btn btn-success"  %>
<% else %>
  <%= link_to "Remove from your watchlist", planned_movie_path(PlannedMovie.find_by(movie_id: movie.id, user_id: current_user.id)), data: { turbo_method: "DELETE" }, class: "btn btn-danger"  %>
<% end %>
