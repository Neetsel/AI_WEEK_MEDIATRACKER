<% if Chat.find_by(movie_id: movie.id, user_id: current_user.id).nil? %>
  <%= link_to movie_chats_path(movie.id), data: { turbo_method:"POST" } do %>
    <i class="fa-solid fa-comments"></i>
  <% end %>
<% else %>
  <%= link_to chat_path(Chat.find_by(movie_id: movie.id, user_id: current_user.id)) do %>
    <i class="fa-solid fa-comments"></i>
  <% end %>
<% end %>
